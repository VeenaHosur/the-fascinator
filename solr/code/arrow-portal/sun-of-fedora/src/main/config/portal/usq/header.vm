<!-- BEGIN header.vm -->
<div class="portal-bar">
  <table cellspacing="0" cellpadding="0" width="100%" height="100%">
    <tr>
      <td width="180">
        <table cellpadding="0" border="0" cellspacing="0" width="180">
          <tr>
            <td width="100%" bgcolor="#FFCC66" height="31">
              <img src="$locator.getLocation('images/spacer.gif')" width="93" height="31" border="0"/>
            </td>
            <td align="right" width="87" bgcolor="#000000" height="60" rowspan="2">
              <a href="http://www.usq.edu.au/">
                <img src="$locator.getLocation('images/USQAustralia_logo2.gif')" width="87" height="61" alt="USQ: University of Southern Queensland" border="0"/>
              </a>
            </td>
          </tr>
          <tr>
            <td bgcolor="#3266CC" height="30"/>
          </tr>
        </table>
      </td>
      <td width="100%">
        <table cellspacing="0" cellpadding="0" width="100%">
          <tr>
            <td class="header-topright" align="right" width="100%" height="30"/>
          </tr>
          <tr>
            <td width="400" bgcolor="#3266CC" valign="bottom">
              <img src="$locator.getLocation('images/USQePrints_banner.gif')" width="400" height="31"/>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</div>
<div class="nav-bar">
  <ul>
    <li class="home"><a href="${contextPath}">Home</a></li>
    #if($session.loggedIn)
      <li><a href="${contextPath}logout">Logout</a>: <span class="user">$session.userName</span></li>
    #else
      #if($pageName != "Login")
        <li><a href="${contextPath}login">Login</a></li>
      #end
    #end
    #if($session.userInRole("admin"))
      <li><a href="${contextPath}portal/create">New Portal</a></li>
      <li><a href="${contextPath}config">Settings</a></li>
    #end
    <li><a href="${contextPath}about">About</a></li>
    <li><a href="mailto:">Contact</a></li>
    <li><span class="user">$session.userRoles</span></li>
  </ul>
</div>
<!-- END header.vm -->
