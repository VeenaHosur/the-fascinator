<html xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
  <head>
    <title>USQ Solr Portal Demo</title>
    <link rel="stylesheet" type="text/css" href="${stylesheet}" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  </head>
  <body>
    <h1>USQ Solr Portal Demo</h1>
    <p><a t:type="pagelink" t:page="config">Configuration</a></p>
    <h2>Portals</h2>
    <t:grid t:source="config.portals" t:row="portal" t:model="model" t:include="name,query,edit">
      <t:parameter t:name="namecell">
        <a t:type="pagelink" t:page="search" t:context="portal.name">${portal.description}</a>
      </t:parameter>
      <t:parameter t:name="editcell">
        <t:if t:test="editable">
          <a t:type="pagelink" t:page="portal/edit" t:context="portal.name">Edit</a>
        </t:if>
      </t:parameter>
    </t:grid>
    <p><a t:type="pagelink" t:page="portal/create">Create portal</a></p>
  </body>
</html>
