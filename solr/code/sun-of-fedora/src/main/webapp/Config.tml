<html xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
  <head>
    <title>USQ Solr Portal Demo</title>
    <link rel="stylesheet" type="text/css" href="${stylesheet}" />
  </head>
  <body>
    <h1>USQ Solr Portal Demo</h1>
    <h2>Configuration</h2>
    <form t:type="form">
      <table>
      <tr>
        <td>Solr base URL</td>
        <td>
          <input type="text" size="40" t:type="textfield" t:value="config.solrBaseUrl"/>
        </td>
      </tr>
      <tr>
        <td>Facets</td>
        <td>
          <input type="text" size="60" t:type="textfield" t:value="config.facetFields"/>
        </td>
      </tr>
      <tr>
        <td>Facet count</td>
        <td>
          <input type="text" size="10" t:type="textfield" t:value="config.facetCount"/>
        </td>
      </tr>
      <tr>
        <td>Records per page</td>
        <td>
          <input type="text" size="10" t:type="textfield" t:value="config.recordsPerPage"/>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <input type="submit" value="Update" t:type="submit"/>
        </td>
      </tr>
      </table>
    </form>
  </body>
</html>
