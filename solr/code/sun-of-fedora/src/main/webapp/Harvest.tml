<html xmlns="http://www.w3.org/1999/xhtml" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
  <head>
    <title>USQ Solr Portal Demo</title>
    <link rel="stylesheet" type="text/css" href="${stylesheet}" />
  </head>
  <body>
    <h1>USQ Solr Portal Demo</h1>
    <h2>Harvest Metadata (via OAI-PMH)</h2>
    <form t:type="form">
      <table>
      <tr>
        <td>Solr base URL</td>
        <td>
          <input type="text" size="40" t:type="textfield" t:value="config.solrBaseUrl"/>
        </td>
      </tr>
      <tr>
        <td>Repository base URL</td>
        <td>
          <input type="text" size="40" t:type="textfield" t:value="reposUrl"/>
        </td>
      </tr>
      <tr>
        <td>Repository name</td>
        <td>
          <input type="text" size="25" t:type="textfield" t:value="reposName"/>
        </td>
      </tr>
      <tr>
        <td>Request limit</td>
        <td>
          <input type="text" size="10" t:type="textfield" t:value="limit"/>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <input type="submit" value="Start" t:type="submit"/>
        </td>
      </tr>
      </table>
    </form>
  </body>
</html>
