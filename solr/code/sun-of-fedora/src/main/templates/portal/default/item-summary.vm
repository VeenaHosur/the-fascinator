#set($doc = $page.doc)
<h2 class="doc-title">$doc.title</h2>
<p class="doc-id">$doc.id</p>
#foreach($identifier in $doc.identifiers)
  #if($identifier.startsWith("http://"))
    <a class="identifier" href="$identifier">$identifier</a>
  #else
    $identifier
  #end
  <br/>
#end
<p class="doc-description">
  #if($doc.description)
    ${doc.description}
  #else
    No description
  #end
</p>