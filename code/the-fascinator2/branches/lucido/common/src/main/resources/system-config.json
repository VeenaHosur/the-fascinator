{
    "fascinator-home": "/opt/the-fascinator2/code",
    "email" : "fascinator@usq.edu.au",
    "authentication": {
        "type": "internal",
        "internal": {
            "path": "${user.home}/.fascinator/users.properties"
        }
    },
    "roles": {
        "type": "internal",
        "internal": {
            "path": "${user.home}/.fascinator/roles.properties"
        }
    },
    "storage": {
        "type": "file-system",
        "file-system": {
            "home": "${user.home}/.fascinator/storage",
            "use-link": true
        },
        "fedora3": {
            "url": "http://localhost:8080/fedora",
            "username": "fedoraAdmin",
            "password": "fedoraAdmin"
        },
        "couchdb": {
            "url": "http://localhost:8080/couch"
        },
        "ignoreFilter": ".svn|.ice|.*|~*"
    },
    "messaging": {
        "url": "tcp://localhost:61616",
        "stompUrl": "stomp://localhost:61613",
        "home": "${user.home}/.fascinator/activemq-data",
        "render-thread": 3
    },
    "indexer": {
        "type": "solr",
        "properties": "SOF-META",
        "solr": {
            "uri": "http://localhost:9997/solr/fascinator",
            "autocommit": true,
            "embedded": false
        },
        "script": {
            "type": "python",
            "rules": "local-files.py"
        },
        "params": {
            "repository.name": "Local Files",
            "repository.type": "Local File System"
        }
    },
    "portal": {
        "home": "src/main/config/portal",
        "contentDir": "${user.home}/.fascinator/content",
        "default": "default",
        "layout": "layout",
        "nativeJython": true
    },
    "transformer": {
        "extractor": ["aperture"],
        "render": ["ice2", "ims"],
        "aperture": {
            "outputPath": "${java.io.tmpdir}/ice2-output"
        },
        "ice2": {
            "url": "http://139.86.35.139:8888/api/convert/",
            "url-amazon": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "resize.image.mode": "fixedWidth",
            "resize.image.ratio": "-90",
            "resize.image.fixedWidth": "150",
            "enlargeImage": "false",
            "outputPath": "${java.io.tmpdir}/ice2-output",
            "excludeRenditionExt": ".txt,.mp3,.m4a"
        }
    }
}
