	    <script type="text/javascript">
	    $(function() {
	        $("a.search").click(function() {
	            $("form.search").submit();
	            return false;
	        });
	        var dialogOpts = {
		        title: "Login",
		        autoOpen: false,
		        hide: "blind",
		        modal: true
		    }
		    $("#login-form").dialog(dialogOpts);
		
		    $("#login-now").click(function() {
		        $("#login-message").empty();
		        $("#login-error").hide();
		        $("#login-form").dialog('open');
		        return false;
		    });
		    $("#login-cancel").click(function() {
		        $("#login-message").empty();
		        $("#login-error").hide();
		        $("#login-form").dialog('close');
		        return false;
		    });
		    $("#login-submit").click(function() {
		        $("#login-message").empty();
		        $("#login-loading").show();
		        jQuery.ajax({
		            type : "POST",
		            url : "$portalPath/actions/login.ajax",
		            success:
		                function(data, status) {
		                    $("#login-loading").hide();
		                    var response = data.split(":");
		                    username = jQuery.trim(response[0]);
		                    is_admin = jQuery.trim(response[1]);
		                    $("#user-info").html("Welcome " + username + ", <a href='?verb=logout'>logout</a>");
		                    if (is_admin == "admin") {
		                        $("#admin-link").show();
		                    }
		                    $("#login-form").dialog('close');
		                },
		            error:
		                function (req, status, e) {
		                    $("#login-loading").hide();
		                    $("#login-error").show();
		                    $("#login-message").html(req.responseText);
		                },
		            data: {
		                username: $("#username").val(),
		                password: $("#password").val(),
		                verb: "login"
		            }
		        });
		    });
	    });
