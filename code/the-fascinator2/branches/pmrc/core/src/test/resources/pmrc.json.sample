{
    "harvester": {
        "type": "file-system",
        "file-system": {
            "baseDir": "${user.home}/Documents/FSB CORAL PROJECT/",
            "ignoreFilter": ".svn|.ice|.*|~*|Thumbs.db|.DS_Store",
            "cacheDir": "${user.home}/.fascinator/cache",
            "force": false,
            "recursive": true
        }
    },
    
    "transformer": {
        "extractor": ["aperture"],
        "render": ["ice2", "ims", "ffmpeg"],
        "aperture": {
            "outputPath": "${java.io.tmpdir}/ice2-output"
        },
        "ice2": {
            "url": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "resize.image.mode": "fixedWidth",
            "resize.image.ratio": "-90",
            "resize.image.fixedWidth": "160",
            "enlargeImage": "false",
            "outputPath": "${java.io.tmpdir}/ice2-output",
            "excludeRenditionExt": ".txt,.mp3,.m4a,.mov,.mp4,.wav,.wma,.wmv"
        },
        "ffmpeg": {
            "executable": "ffmpeg",
            "outputPath": "${java.io.tmpdir}/ffmpeg-output",
            "outputExt": "flv",
            "thumbnailSize": "160x120",
            "excludeExt": "flv,m4a,mp3",
            "params": {
                "default": "-f flv -b 192k -ab 64k -ar 44k -ac 1 -s 400x224 -padtop 30 -padbottom 30"
            }
        }
    },
    
    "indexer": {
        "script": {
            "type": "python",
            "rules": "pmrc.py"
        },
        "params": {
            "repository.name": "Local Files",
            "repository.type": "Local File System",
            "base.file.path": "${user.home}/Documents/FSB CORAL PROJECT/"
        }
    }
}
