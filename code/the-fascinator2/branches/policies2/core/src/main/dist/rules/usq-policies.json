{
    "harvester": {
        "type": "file-system",
        "file-system": {
            "baseDir": "/policies",
            "ignoreFilter": ".svn|.ice|.*|~*",
            "cacheDir": "/opt/the-fascinator/work/cache",
            "force": false,
            "recursive": false
        }
    },
    
    "transformer": {
        "conveyer": "aperture, ice2",
        "aperture": {
            "outputPath": "/opt/the-fascinator/work/aperture"
        },
        "ice2": {
            "url": "http://localhost:8000/api/convert/",
            "url-amazon": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "outputPath": "/opt/the-fascinator/work/ice2",
            "resize.image.ratio": "-90"
        }
    },
    
    "indexer": {
        "script": {
            "type": "python",
            "rules": "usq-policies.py"
        },
        "params": {
            "source.name": "USQ Policy Library",
            "source.type": "Local File System"
        }
    }
}
