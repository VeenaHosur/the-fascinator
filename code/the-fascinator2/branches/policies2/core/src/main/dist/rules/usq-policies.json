{
    "harvester": {
        "type": "file-system",
        "file-system": {
            "baseDir": "c:/policies",
            "ignoreFilter": ".svn|.ice|.*|~*",
            "cacheDir": "c:/Program Files/The Fascinator/work/cache",
            "force": false,
            "recursive": true
        }
    },
    
    "transformer": {
        "conveyer": "aperture, ice2",
        "aperture": {
            "outputPath": "${java.io.tmpdir}/aperture-output"
        },
        "ice2": {
            "url": "http://localhost:8000/api/convert/",
            "url-amazon": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "outputPath": "${java.io.tmpdir}/ice2-output",
            "resize.image.ratio": "-90"
        }
    },
    
    "indexer": {
        "script": {
            "type": "python",
            "rules": "usq-policies.py"
        },
        "params": {
            "source.name": "USQ Policies",
            "source.type": "Local File System"
        }
    }
}
