<assembly>
  <id>policies</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>net.sf.jacob-project:jacob</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/dist</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../portal/src/main/config/portal</directory>
      <outputDirectory>portal</outputDirectory>
      <excludes>
        <exclude>default-original</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
