{
    "harvester": {
        "type": "workflow-harvester",
        "workflow-harvester": {
            "force-storage": "true"
        }
    },

    "transformer": {
        "extractor": [],
        "indexOnHarvest": false,
        "render": ["aperture", "ice2"],
        "aperture": {
            "outputPath": "${java.io.tmpdir}/${user.name}/ice2-output"
        },
        "ice2": {
            "url": "http://ice-service.usq.edu.au/api/convert/",
            "outputPath": "${java.io.tmpdir}/${user.name}/ice2-output",
            "excludeRenditionExt": "txt,mp3,m4a,mov,mp4,wav,wma,wmv,mpg,flv",
            "resize": {
                "thumbnail": {
                    "option": "fixedWidth",
                    "ratio": "-90",
                    "fixedWidth": "160",
                    "enlarge": "false"
                },
                "preview": {
                    "option": "fixedWidth",
                    "ratio": "-90",
                    "fixedWidth": "600",
                    "enlarge": "false"
                }
            }
        },
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "arts-basic.py"
        },
        "params": {
            "repository.name": "Arts",
            "repository.type": "Submissions",
            "workflow_field": "workflowStep"
        }
    },

    "stages": [
        {
            "name": "pending",
            "label": "Pending",
            "security": ["submitter","reviewer","admin"],
            "visibility": ["submitter","reviewer","admin"]
        },
        {
            "name": "submitted",
            "label": "Arts Submission",
            "security": ["metadata","reviewer","admin"],
            "visibility": ["metadata","reviewer","admin"],
            "template": "workflows/arts-basic-submitted"
        },
        {
            "name": "reviewing",
            "label": "Reviewing",
            "security": ["reviewer","admin"],
            "visibility": ["reviewer","admin"],
            "template": "workflows/arts-basic-reviewing"
        },
        {
            "name": "live",
            "label": "Live",
            "security": ["admin"],
            "visibility": ["guest"],
            "template": "workflows/arts-basic-live"
        }
    ]
}
