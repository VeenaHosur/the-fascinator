{
    "harvester": {
        "type": "workflow-harvester",
        "workflow-harvester": {
            "force-storage": "true"
        }
    },

    "transformer": {
        "extractor": ["aperture"],
        "render": ["ice2", "ims"],
        "aperture": {
            "outputPath": "${java.io.tmpdir}/ice2-output"
        },
        "ice2": {
            "url": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "resize.image.mode": "fixedWidth",
            "resize.image.ratio": "-90",
            "resize.image.fixedWidth": "150",
            "enlargeImage": "false",
            "outputPath": "${java.io.tmpdir}/ice2-output",
            "excludeRenditionExt": ".txt,.mp3,.m4a"
        }
    },

    "indexer": {
        "script": {
            "type": "python",
            "rules": "workflow-harvester.py"
        },
        "params": {
            "repository.name": "Generic Workflow",
            "repository.type": "Uploaded Files",
            "workflow_field": "workflowStep"
        }
    },

    "stages": [
        {
            "name": "init",
            "security": ["owner", "admin"],
            "visibility": ["guest", "owner", "admin"],
            "template": "${user.home}/.fascinator/workflows/templates/basic-init.vm"
        },
        {
            "name": "live",
            "security": ["owner", "admin"],
            "visibility": ["guest", "owner", "admin"],
            "template": "${user.home}/.fascinator/workflows/templates/basic-live.vm"
        }
    ]
}
