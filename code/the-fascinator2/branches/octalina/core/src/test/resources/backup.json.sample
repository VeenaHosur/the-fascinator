{
    "harvester": {
        "type": "restore-backup"
    },
    
    "transformer": {
        "conveyer": "aperture, ice2",
        "aperture": {
            "outputPath": "${java.io.tmpdir}/ice2-output"
        },
        "ice2": {
            "url-amazon": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "url": "http://139.86.35.157:8888/api/convert/",
            "resize.image.mode": "fixedWidth",
            "resize.image.ratio": "-90",
            "resize.image.fixedWidth": "150",
            "enlargeImage": "false",
            "outputPath": "${java.io.tmpdir}/ice2-output",
            "excludeRenditionExt": ".txt,.mp3,.m4a"
        }
    },
    
    "indexer": {
        "script": {
            "type": "python",
            "rules": "local-files.py"
        },
        "params": {
            "repository.name": "Local Files",
            "repository.type": "Local File System"
        }
    },
    
    "backup-email" : "octalina@usq.edu.au",
    "backup-paths" : {
      "/home/octalina/backup" : {
        "include-rendition-meta" : true,
        "ignoreFilter" : ".svn|.ice|.*|~*|*~",
        "active" : true,
        "include-portal-view" : true
      }
    },
    
    "restore-email" : "octalina@usq.edu.au",
    "restore-paths" : {
      "/home/octalina/backup" : {
        "include-rendition-meta" : false,
        "ignoreFilter" : ".svn|.ice|.*|~*|*~",
        "active" : true,
        "include-portal-view" : true
      }
    }
    
}