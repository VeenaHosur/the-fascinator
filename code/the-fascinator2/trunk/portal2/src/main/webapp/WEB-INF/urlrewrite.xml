<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.2//EN" "http://tuckey.org/res/dtds/urlrewrite3.2.dtd">
<urlrewrite use-query-string="true">
  <rule match-type="wildcard">
    <name>Portal Resource</name>
    <note>Forward to a specific portal resource</note>
    <from>^/*/*$</from>
    <to last="true">/$2?portal=$1</to>
  </rule>
  <rule match-type="wildcard">
    <name>Default Resource</name>
    <note>Forward to the specified resource in the default portal</note>
    <from>^/*$</from>
    <to last="true">/$1?portal=\$default</to>
  </rule>
  <rule>
    <name>Start Page</name>
    <note>Forward to the default start page if no URL is specified</note>
    <from>^/$</from>
    <to last="true">/start.vm?portal=\$default</to>
  </rule>
