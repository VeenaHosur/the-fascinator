{
    "version": "0.5.0",
    "configured": false,
    "email" : "fascinator@usq.edu.au",
    "accesscontrol": {
        "type": "simple",
        "simple": {
            "path": "${fascinator.home}/security/access.properties"
        }
    },
    "authentication": {
        "type": "internal",
        "internal": {
            "path": "${fascinator.home}/security/users.properties"
        }
    },
    "roles": {
        "type": "internal",
        "internal": {
            "path": "${fascinator.home}/security/roles.properties"
        }
    },
    "storage": {
        "type": "file-system",
        "file-system": {
            "home": "${fascinator.home}/storage"
        },
        "fedora3": {
            "url": "http://localhost:8080/fedora",
            "username": "fedoraAdmin",
            "password": "fedoraAdmin"
        },
        "couchdb": {
            "url": "http://localhost:8080/couch"
        },
        "ignoreFilter": ".svn|.ice|.*|~*"
    },
    "messaging": {
        "url": "tcp://localhost:61616",
        "stompUrl": "stomp://localhost:61613",
        "home": "${fascinator.home}/activemq-data",
        "render-thread": 3
    },
    "indexer": {
        "type": "solr",
        "properties": "SOF-META",
        "solr": {
            "uri": "http://localhost:9997/solr/fascinator",
            "autocommit": true,
            "embedded": false
        },
        "anotar": {
            "uri": "http://localhost:9997/solr/anotar",
            "autocommit": true,
            "embedded": false
        },
        "script": {
            "type": "python",
            "rules": "local-files.py"
        },
        "params": {
            "repository.name": "Local Files",
            "repository.type": "Local File System"
        }
    },
    "portal": {
        "home": "src/main/config/portal",
        "contentDir": "${fascinator.home}/content",
        "default": "default",
        "layout": "layout",
        "nativeJython": true,
        "uploader": "${fascinator.home}/workflow-config.json"
    },
    "transformer": {
        "extractor": ["aperture"],
        "render": ["ffmpeg", "ice2", "ims"],
        "aperture": {
            "outputPath": "${java.io.tmpdir}/${user.name}/ice2-output"
        },
        "ice2": {
            "url": "http://ec2-75-101-136-199.compute-1.amazonaws.com/api/convert/",
            "outputPath": "${java.io.tmpdir}/${user.name}/ice2-output",
            "excludeRenditionExt": "txt,mp3,m4a",
            "resize": {
                "thumbnail": {
                    "option": "fixedWidth",
                    "ratio": "-90",
                    "fixedWidth": "160",
                    "enlarge": "false"
                }, 
                "preview": {
                    "option": "fixedWidth",
                    "ratio": "-90",
                    "fixedWidth": "600",
                    "enlarge": "false"
                }
            }
        },
        "ffmpeg": {
            "executable": "ffmpeg",
            "outputPath": "${java.io.tmpdir}/${user.name}/ffmpeg-output",
            "outputExt": "flv",
            "thumbnailSize": "160x120",
            "excludeExt": "flv,m4a,mp3,mov,mp4,wav,wma,wmv,mpg",
            "params": {
                "default": "-f flv -b 192k -ab 64k -ar 44100 -ac 1 -s 400x224 -padtop 30 -padbottom 30"
            }
        }
    }
}
