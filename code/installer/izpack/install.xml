<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>The-Fascinator</appname>
        <appversion>1.0</appversion>
        <authors>
            <author name="Author" email="author@usq.edu.au"/>
        </authors>
        <url>http://fascinator.usq.edu.au/</url>
        <run-privileged condition="izpack.windowsinstall.vista|izpack.macinstall|izpack.linuxinstall"/>
        <summarylogfilepath>$INSTALL_PATH/installinfo/Summary.htm</summarylogfilepath>
    </info>

    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="yes"/>


    <variables>
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
        <variable name="ApplicationShortcutPath" value="ApplicationShortcuts"/>
        <variable name="JDKPathPanel.minVersion" value="1.5"/>
        <variable name="JDKPathPanel.skipIfValid" value="yes"/> 
        <variable name="DesktopShortcutCheckboxEnabled" value="true"/>
    </variables>
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="resources/the-fascinator/COPYING"/>
        <res id="InfoPanel.info" src="resources/the-fascinator/README"/>
        <res id="userInputSpec.xml" src="userInputSpec.xml"/>
        <res id="userInputLang.xml_eng" src="userInputLang.xml_eng" />
        <res id="TargetPanel.dir" src="TargetDir.txt" />
        <res id="TargetPanel.dir.unix" src="Unix_TargetDir.txt" />
        <res id="TargetPanel.dir.macosx" src="Mac_TargetDir.txt" />
        <res id="Win_shortcutSpec.xml" src="Win_shortcutSpec.xml"/>
        <res id="Unix_shortcutSpec.xml" src="Unix_shortcutSpec.xml"/>
    </resources>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="JDKPathPanel"/>
        <panel classname="UserInputPanel" id="UserInputPanel.0"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel" condition="izpack.windowsinstall"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <native type="izpack" name="ShellLink.dll">
      <os family="windows"/>
    </native>

    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Basic" id="Basic" required="yes">
            <description>The base files</description>
            <file src="resources" targetdir="$INSTALL_PATH"/>
            <file src="TFInstaller.jar" targetdir="$INSTALL_PATH"/>
            <file src="lib" targetdir="$INSTALL_PATH"/>
            
            <file src="install.sh" targetdir="$INSTALL_PATH">
              <os family="unix"/>
            </file>
            
            
            <file src="install.bat" targetdir="$INSTALL_PATH">
              <os family="windows"/>
            </file>
            
            
            <parsable targetfile="$INSTALL_PATH/install.sh" stage="never">
              <os family="unix"/>
            </parsable>
            
            
            <parsable targetfile="$INSTALL_PATH/install.bat" stage="never">
              <os family="windows"/>
            </parsable>
            
            
            <executable targetfile="$INSTALL_PATH/install.sh" stage="postinstall" keep="false">
              <os family="unix"/>
            </executable>
            
            <executable targetfile="$INSTALL_PATH/TFInstaller.jar" type="jar" failure="asl" stage="postinstall" keep="false">
              <os family="windows"/>
              <args>
                <arg value="$INSTALL_PATH" />
                <arg value="${fedoraAdminPassword}" />
                <arg value="${solrAdminPassword}" />
                <arg value="$JDKPath" />
              </args>
            </executable>
            
            <executable targetfile="$INSTALL_PATH/install.bat" stage="postinstall" keep="false">
              <os family="windows"/>
            </executable>
            
        </pack>
    </packs>    

</installation>
