<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="The Fascinator"
                location="applications"/>
  <shortcut
    name="Start The Fascinator"
    target="$INSTALL_PATH\the-fascinator\bin\startup.bat"
    workingDirectory="$INSTALL_PATH\the-fascinator"
    description="This starts The Fascinator"
    iconFile="$INSTALL_PATH\the-fascinator\bin\startup.ico"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Basic"/>
  </shortcut>
  
  <shortcut
    name="Stop The Fascinator"
    target="$INSTALL_PATH\the-fascinator\bin\shutdown.bat"
    workingDirectory="$INSTALL_PATH\the-fascinator"
    description="This stops The Fascinator"
    iconFile="$INSTALL_PATH\the-fascinator\bin\shutdown.ico"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
    <createForPack name="Basic"/>
  </shortcut>  
</shortcuts>
