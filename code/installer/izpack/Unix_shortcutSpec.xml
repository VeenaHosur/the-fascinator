<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="The Fascinator"
                location="applications"/>
  <shortcut
    name="Start The Fascinator"
    target="$INSTALL_PATH/the-fascinator/bin/startup.sh"
    workingDirectory="$INSTALL_PATH/the-fascinator"
    description="This starts The Fascinator"
    iconFile="$INSTALL_PATH/the-fascinator/bin/startup.png"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    type="Application"
    terminal="true"
    encoding="UTF-8"
    startup="no">
    <createForPack name="Basic"/>
  </shortcut>
  
  <shortcut
    name="Stop The Fascinator"
    target="$INSTALL_PATH/the-fascinator/bin/shutdown.sh"
    workingDirectory="$INSTALL_PATH/the-fascinator"
    description="This stops The Fascinator"
    iconFile="$INSTALL_PATH/the-fascinator/bin/shutdown.png"
    initialState="normal"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    type="Application"
    terminal="true"
    encoding="UTF-8"    
    startup="no">
    <createForPack name="Basic"/>
  </shortcut>  
</shortcuts>
